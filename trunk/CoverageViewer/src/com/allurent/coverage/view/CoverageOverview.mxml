<view:SegmentView 
	xmlns:mx="http://www.adobe.com/2006/mxml"
    xmlns:view="com.allurent.coverage.view.*" 
    >

    <mx:AdvancedDataGrid 
    	id="coverageGrid" 
    	width="100%" height="100%" 
    	openDuration="100" 
    	enabled="{coverageViewerPM.enabled}"  
        change="selectItem(coverageGrid.selectedItem)"> 
        <mx:columns>
            <mx:AdvancedDataGridColumn 
            	dataField="displayName" 
            	width="100" 
            	headerText="Name" />
            <mx:AdvancedDataGridColumn 
            	id="coverageColumn" 
            	width="55" 
            	dataField="{coverageDataField}" 
            	headerText="{headerText}">
                <mx:formatter>
                    <mx:NumberFormatter precision="2"/>
                </mx:formatter>
            </mx:AdvancedDataGridColumn>
            <mx:AdvancedDataGridColumn 
            	width="42" 
            	dataField="{uncoveredDataField}" 
            	headerText="Uncovered">
                <mx:formatter>
                    <mx:NumberFormatter/>
                </mx:formatter>
            </mx:AdvancedDataGridColumn>
        </mx:columns>
        <mx:rendererProviders>
            <mx:AdvancedDataGridRendererProvider 
            	column="{coverageColumn}"
                renderer="{renderer}"/>
        </mx:rendererProviders>
    </mx:AdvancedDataGrid>

</view:SegmentView>
