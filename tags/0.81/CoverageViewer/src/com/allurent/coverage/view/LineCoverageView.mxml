<view:CoverageOverview 
	xmlns:mx="http://www.adobe.com/2006/mxml"
    xmlns:view="com.allurent.coverage.view.*" 
    width="100%" height="100%"
    dataProvider="{model.coverageModels.lineModel}" 
    isEnabled="{model.enabled}" 
    headerText="Line Coverage" 
    coverageDataField="lineCoverage" 
    uncoveredDataField="uncoveredLines"
    renderer="com.allurent.coverage.view.LineCoverageColumnRenderer"    
    >
    
    <mx:Metadata>
        [Event(name="select", type="com.allurent.coverage.event.BrowserItemEvent")]
    </mx:Metadata>    
    
    <mx:Script>
        <![CDATA[
            import com.allurent.coverage.view.model.BrowserPM;
            
            [Bindable]
            public var model:BrowserPM;      
        ]]>
    </mx:Script>

</view:CoverageOverview>
