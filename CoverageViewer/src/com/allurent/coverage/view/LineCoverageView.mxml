<mx:ViewStack 
	xmlns:mx="http://www.adobe.com/2006/mxml"
    xmlns:view="com.allurent.coverage.view.*" 
    selectedIndex="{ coverageViewerPM.searchPM.searchForPackage ? 0 : 1 }" 
    >
    
    <mx:Script>
    	<![CDATA[
    		import com.allurent.coverage.view.model.CoverageViewerPM;
    		
    		[Bindable]
    		public var coverageViewerPM:CoverageViewerPM;
    	]]>
    </mx:Script>
	
	<view:CoverageOverview
		width="100%" height="100%"
	    dataProvider="{coverageViewerPM.searchPM.linePackageSearch.content}" 
	    coverageViewerPM="{coverageViewerPM}" 
	    headerText="Line Coverage" 
	    coverageDataField="lineCoverage" 
	    uncoveredDataField="uncoveredLines"
	    renderer="com.allurent.coverage.view.LineCoverageColumnRenderer"
	    />
	<view:CoverageOverview 
		width="100%" height="100%"
	    dataProvider="{coverageViewerPM.searchPM.lineClassSearch.content}" 
	    coverageViewerPM="{coverageViewerPM}" 
	    headerText="Line Coverage" 
	    coverageDataField="lineCoverage" 
	    uncoveredDataField="uncoveredLines"
	    renderer="com.allurent.coverage.view.LineCoverageColumnRenderer" 
	    />

</mx:ViewStack>
